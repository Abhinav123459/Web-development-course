<!DOCTYPE html>
<html>
<head>
    <title>Static Method Example</title>
</head>
<body>
    <h2 id="result1"></h2>
    <h2 id="result2"></h2>
    <h2 id="result3"></h2>

    <script>
        class Car {
            constructor(name) {
                this.name = name;
            }

            static brandInfo() {
                return "This is a luxury car brand.";
            }
        }

        class Model extends Car {
            constructor(name, model) {
                super(name);
                this.model = model;
            }
        }

        let car1 = new Car("Mercedes-Benz");
        let model1 = new Model("BMW", "X7");

        document.getElementById("result1").innerHTML = Car.brandInfo();
        document.getElementById("result2").innerHTML = car1.name;
        document.getElementById("result3").innerHTML = model1.name + " " + model1.model;
    </script>
</body>
</html>
