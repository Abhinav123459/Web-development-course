<!DOCTYPE html>
<html>
<head>
    <title>Age Validation Form</title>
</head>
<body>
    <h2>Age Validation</h2>

    <form onsubmit="return checkAge()">
        <label>Enter your age:</label>
        <input type="number" id="age" required>
        <button type="submit">Submit</button>
    </form>

    <p id="result"></p>

    <script>
        function checkAge() {
            var age = document.getElementById("age").value;
            if (age >= 18) {
                document.getElementById("result").innerHTML = "✅ You are above 18.";
            } else {
                document.getElementById("result").innerHTML = "❌ You must be 18 or older.";
            }
            return false;
        }
    </script>
</body>
</html>
