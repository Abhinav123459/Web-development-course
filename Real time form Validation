// HTML:
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewreport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <form onsubmit="validate(event)">
        <fieldset>
            <label>Email:</label>
            <input type="email" id="emal" name="email"><br><br>
            <label>Password:</label>
            <input type="password" id="password" name="password" minlength="8"><br><br>
            <label>Age:</label>
            <input type="number" id="age" name="age" min="12" max="50"><br><br>
            <button type="submit">Login</button>
        </fieldset>

    </form>
    <div id="message"></div>
    <script src="script1.js"></script>
</body>

// JavaScript
function validate(e) {
    e.preventDefault();

    const email = document.getElementById('email').value;
    const pass = document.getElementById('password').value;
    const age = document.getElementById('age').value;
    const msgBox = document.getElementById('message');

    let message = '';
    if (email === "") {
        message = 'Please enter an email.';
        msgBox.style.color = 'yellow';

    } else if (pass === '') {
        message = 'Password must be filled out and of 8 characters';
        msgBox.style.color = 'red';

    } else if (age === '') {
        message = 'Age must be between 12 and 50.';
        msgBox.style.color = 'red';
    } else {
        message = 'Login Successful';
        msgBox.style.color = 'green';
    }

    msgBox.innerText = message;
}

</html>
