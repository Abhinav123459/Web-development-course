//CSS

/* global css */

*{

font-size: 30px;

font-weight: 500;

}

/* External CSS */

h3{

color: blue;

}

/* element selector */

h4{

color: palevioletred;

}

/* class selector */

.myclass{

color: darkorange;

}

/* id selector */

#myid{

color: mediumpurple;

}

/* group selector */

h5,p{

color: maroon;

}
